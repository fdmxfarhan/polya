doctype html

html
    head
        title Register
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="shortcut icon", href="/img/logo.png", type="image/x-icon")
        script(src="/js/jquery-3.5.1.min.js")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        //- meta(name="theme-color" content="#050507")
        //- script(src="/js/index.js")
        link(rel="stylesheet", href="/css/dashboard/dashboard-layout.css")
        block styles
    body
        .black-modal
        .dashboard
            .side-bar 
                a.settings(href="#") 
                    i.fa.fa-gear 
                a.logo(href="/") 
                    img(src="/img/logo.png")
                .user-info
                    img.avatar(src="/img/avatar/10.png")
                    h1.name= user.fullname
                    .statistics 3 کارت مطالعه شده - 1 دسته ساخته شده
                .scroll-view 
                    .list 
                        h1.title کلاس های من (3)
                        i.fa.fa-search.search
                        i.fa.fa-plus.plus
                        .list-content.active
                            .active-bar
                            i.fa.fa-book.icon
                            .info 
                                h1 عنوان کلاس
                                .progress-bar
                                    .passed(style="width: 20%")
                        .list-content
                            .active-bar
                            i.fa.fa-graduation-cap.icon
                            .info 
                                h1 عنوان کلاس
                                .progress-bar
                                    .passed(style="width: 80%")
                        .list-content
                            .active-bar
                            i.fa.fa-database.icon
                            .info 
                                h1 عنوان کلاس
                                .progress-bar
                                    .passed(style="width: 40%")
                        a.link(href="#") 
                            i.fa.fa-plus 
                            .text ساخت کلاس جدید
                        a.link(href="#") 
                            i.fa.fa-search
                            .text یافتن فلشکارت
                    .list 
                        h1.title کلاس های محبوب
                        //- i.fa.fa-search.search
                        //- i.fa.fa-plus.plus
                        .list-content
                            .active-bar
                            i.fa.fa-book.icon.green
                            .info 
                                h1.single عنوان کلاس
                        .list-content
                            .active-bar
                            i.fa.fa-book.icon.blue
                            .info 
                                h1.single عنوان کلاس
                        .list-content
                            .active-bar
                            i.fa.fa-book.icon.green
                            .info 
                                h1.single عنوان کلاس
                        a.link(href="#") 
                            i.fa.fa-eye
                            .text مشاهده همه
                a.upgrade(href="#")  ارتقاء به پنل حرفه‌ای
            .content-area
                block content