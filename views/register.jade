extends layout
block styles
    link(rel="stylesheet", href="/css/users.css")

block content
    //- include partials/messages
    -if(errors){
        .errors-area
            -for(var i=0; i<errors.length; i++){
                .error(id='error#{i}')
                    i.fa.fa-warning
                    h1= errors[i].msg
                    i.fa.fa-times.close-error
                    .time-interval(id='time#{i}')
            -}
    -}
    .register
        h1.title 
            i.fa.fa-user-plus 
            | ثبت نام 
        form(action="/users/register" id="register" method="POST")
            .text-input-area
                input.textinput(type="text" placeholder="نام" name="firstName" value= "#{ typeof firstName != 'undefined' ? firstName: '' }")
                i.fa.fa-pencil
            .text-input-area
                input.textinput(type="text" placeholder="نام خانوادگی" name="lastName" value= "#{ typeof lastName != 'undefined' ? lastName: '' }")
                i.fa.fa-pencil
            .text-input-area
                input.textinput(type="text" placeholder="ایمیل" name="email" value= "#{ typeof email != 'undefined' ? email: '' }")
                i.fa.fa-user
            .text-input-area
                input.textinput(type="password" placeholder="رمز عبور" name="password" value= "#{ typeof psw != 'undefined' ? psw: '' }")
                i.fa.fa-key
            .text-input-area
                input.textinput(type="password" placeholder="تایید رمز عبور" name="confirm" value= "#{ typeof confirm != 'undefined' ? confirm: '' }")
                i.fa.fa-check
            .text-input-area
                button.submit(type="submit") ثبت نام
            a.link(href="/users/login") قبلا عضو شده اید؟
    script(src="/js/users.js")